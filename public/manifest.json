{
  "name": "Swiss-Knife",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "All your EVM tools in one place",
  "homepage_url": "https://swiss-knife.xyz",
  "icons": {
    "128": "./icons/icon128.png"
  },
  "action": {
    "default_title": "Swiss-Knife",
    "default_icon": {
      "128": "./icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["static/js/inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": ["activeTab", "storage", "sidePanel", "contextMenus", "tabs"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["static/js/inpage-react-app.js", "assets/*", "img/*"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
